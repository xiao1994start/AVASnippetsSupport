{
  "跳转到标签": {
    "prefix": ["goto "],
    "body": ["goto $0"],
    "description": ["跳转到标签"]
  },
  "临时运行标签": {
    "prefix": ["call label"],
    "body": ["call :$0"],
    "description": [
      "临时运行标签",
      "\t call :label 临时跳转标签代码段需要使用 goto :eof 为结束语句",
      "\t 使用 call :label 的代码上方需要使用 EXIT 或 EXIT /B 0 结束运行"
    ]
  },
  "新建子标签": {
    "prefix": ["new label"],
    "body": [":label", "$0", "goto :eof"],
    "description": ["新建子标签"]
  },
  "从子标签/子程序中返回": {
    "prefix": ["return", "goto eof"],
    "body": ["goto :eof"],
    "description": ["从子标签/子程序中返回"]
  },
  "批量拖入文件处理": {
    "prefix": ["input files"],
    "body": [
      ":process_files",
      "if \"%~1\"==\"\" goto end_process_files",
      "",
      "set \"fullpath=%~f1\"",
      "ECHO 完整路径: !fullpath!",
      "set \"fullfilename=%~nx1\"",
      "ECHO 文件: !fullfilename!",
      "set \"filename=%~n1\"",
      "ECHO 仅文件名: !filename!",
      "set \"filepath=%~dp1\"",
      "ECHO 文件目录: !filepath!",
      "set \"filesize=%~z1\"",
      "ECHO 文件大小: !filesize! 字节",
      "set \"fileext=%~x1\"",
      "ECHO 文件扩展名: !fileext!",
      "",
      "",
      "goto :eof",
      "",
      "",
      ":output_files",
      "shift",
      "goto process_files",
      "",
      ":end_process_files",
      ""
    ],
    "description": "批量拖入文件处理"
  }
}
