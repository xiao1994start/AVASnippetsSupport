{
  "comments": {
    // symbol used for single line comment. Remove this entry if your language does not support line comments
    // 用于单行注释的符号. 如果您的语言不支持行注释, 请删除此条目.
    "lineComment": "#",
    "blockComment": ["\"\"\"", "\"\"\""]
  },
  // symbols used as brackets
  // 用作括号的符号
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  // symbols that are auto closed when typing
  // 打字时自动关闭的符号
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },

    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "r\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "R\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "u\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "U\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "f\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "F\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "b\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "B\"", "close": "\"", "notIn": ["string", "comment"] },

    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "r'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "R'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "u'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "U'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "f'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "F'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "b'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "B'", "close": "'", "notIn": ["string", "comment"] },

    { "open": "`", "close": "`", "notIn": ["string", "comment"] },

    { "open": "\"\"\"", "close": "\"\"\"", "notIn": ["string"] }
  ],
  // symbols that that can be used to surround a selection
  // 可以用来包围选择的符号
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
    ["\"\"\"", "\"\"\""]
  ],
  "folding": {
    "offSide": true,
    "markers": {
      "start": "^[ \\t]*#[ \\t]*region\\b",
      "end": "^[ \\t]*#[ \\t]*endregion\\b"
    }
  },
  "onEnterRules": [
    // Renpy keywords
    // Renpy 关键字
    {
      "beforeText": "^[ \\t]*(?:image|init|label|menu|python|scene|screen|transform)\\b.*?:[ \\t]*$",
      "action": { "indent": "indent" }
    },
    // Outdent keywords
    // 减少缩进关键字
    {
      "beforeText": "^[ \\t]*(?:pass|return|repeat)\\b.*?$",
      "action": { "indent": "outdent" }
    },
    // For menu's
    // 对于菜单
    {
      "beforeText": "^[ \\t]+(?:\".*?\"|\\'.*?\\').*?:[ \\t]*$",
      "action": { "indent": "indent" }
    },
    // Python code
    // Python 代码
    {
      "beforeText": "^[ \\t]*(?:class|def|for|if|elif|else|while|try|with|finally|except|async)\\b.*?:[ \\t]*$",
      "action": { "indent": "indent" }
    }
  ],

  // Indentation rules
  // 缩进规则
  "indentationRules": {
    // 匹配块开始的行 (if:, label:, python:, menu:)
    "increaseIndentPattern": "^\\s*(if|elif|else|while|for|menu|label|screen|init|python|define)\\s*[^:\\n]*:\\s*$",
    // 匹配 elif: 或 else:，告诉 VS Code 先退格再缩进
    "decreaseIndentPattern": "^\\s*(elif|else)\\s*:"
  }
}
